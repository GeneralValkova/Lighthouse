#pragma strict

function Start () {

}

var speed : float = 0.1f;

function Update () {

      if (Input.touchCount > 0 && Input.GetTouch(0).phase == TouchPhase.Moved || ) {
          var touchDeltaPosition : Vector3 = Input.GetTouch(0).deltaPosition;

          transform.Translate (-touchDeltaPosition.x * speed, 0, touch.DeltaPosition.z);
      }
}
